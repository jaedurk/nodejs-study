<h1>{{title}}</h1>

<input type="text" name="search" id="search" value="{{search}}" size="50" placeholder="검색어를 입력하세요." title="검색어 입력"/>
<button onclick="location.href=`?search=${document.getElementById('search').value}`">검색</button>
<br />

<a href="/write"> 글쓰기</a>
<br />

<div>
    <table>
        <thead>
            <tr>
                <th style="width: 50%">제목</th>
                <th>작성자</th>
                <th>조회수</th>
                <th>등록일</th>
            </tr>
        </thead>
        <tbody>
            {{#each posts}}
            <tr>
                <td><a href="/detail/{{_id}}">{{title}}</a></td>
                <td style="text-align: center">{{writer}}</td>
                <td style="text-align: center">{{hits}}</td>
                <td style="text-align: center">{{dateString createdDt}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<div>
    {{#with paginator}}
    <a hre="/?page=1&serach={{@root.search}}">&lt;&lt;</a>
    {{#if hasPrev}}
    <a href="/?page={{prevPage}}&search={{@root.search}}">&lt;</a>
    {{else}}
    <a>&lt;</a>
    {{/if}}
    {{#each pageList}}
    {{#if (eq . @root.paginator.page)}}
    <a>{{.}}</a>
    {{else}}
    <a href="/?page={{.}}&search={{@root.search}}">{{.}}</a>
    {{/if}}
    {{/each}}
    {{#if hasNext}}
    <a href=""/?page={{nextPage}}&search={{@root.search}}>&gt;</a>
    {{else}}
    <a>&gt;</a>
    {{/if}}
    <a href="/?page={{lastPage}}&search={{@root.search}}">&gt;&gt;</a>
    {{/with}}
</div>